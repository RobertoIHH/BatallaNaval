<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para los botones del tablero -->
    <style name="TicTacToeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/board_cell_background</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BotonGuinda" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/guinda_ipn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Estilo para celdas del tablero jugador -->
    <style name="CeldaTableroJugador">
        <item name="android:background">@drawable/celda_jugador_background</item>
    </style>

    <!-- Estilo para celdas del tablero oponente -->
    <style name="CeldaTableroOponente">
        <item name="android:background">@drawable/celda_oponente_background</item>
    </style>
</resources>